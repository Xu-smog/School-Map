<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinerlayoutView"
    android:orientation="horizontal"
    android:layout_width="250dp"
    android:layout_height="60dp"
    android:background="@android:drawable/editbox_background"
    android:padding="0dp" >

    <LinearLayout
        android:id="@+id/InfoLinerlayout"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/HeadTextView"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/ContentTextView"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="TextView" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp">

        <ImageView
            android:id="@+id/WalkView"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/walk" />

        <ImageView
            android:id="@+id/DriveView"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/WalkView"
            app:srcCompat="@drawable/drive" />

    </RelativeLayout>

</LinearLayout>

